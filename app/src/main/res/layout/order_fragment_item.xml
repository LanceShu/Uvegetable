<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/ofi_back_normal"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ofi_date_w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_alignParentStart="true"
            android:textColor="@color/black_1"
            android:text="订单日期："
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/ofi_date"
            android:layout_toEndOf="@id/ofi_date_w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/ofi_font_normal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="9dp"/>

        <TextView
            android:id="@+id/ofi_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/ofi_font_normal"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="11dp"/>

        <TextView
            android:id="@+id/ofi_line"
            android:layout_below="@id/ofi_state"
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_height="1dp"
            android:background="@color/font_no_edit_color"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/ofi_infor_btn"
            android:layout_below="@id/ofi_line"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看详情"
            android:textColor="@color/ofi_font_normal"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
